<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEquipmentActivity">

    <EditText
        android:id="@+id/etEquipmentNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Equipment Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/etEquipmentReserveTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:text="Equipment Reserve Time"
        app:layout_constraintEnd_toEndOf="@+id/etEquipmentNumber"
        app:layout_constraintStart_toStartOf="@+id/etEquipmentNumber"
        app:layout_constraintTop_toBottomOf="@+id/etEquipmentNumber" />

    <EditText
        android:id="@+id/etRequestBy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Request by"
        app:layout_constraintEnd_toEndOf="@+id/etEquipmentNumber"
        app:layout_constraintStart_toStartOf="@+id/etEquipmentNumber"
        app:layout_constraintTop_toBottomOf="@+id/etEquipmentReserveTime" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="99dp"
        android:text="Add Request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRequestBy" />

</androidx.constraintlayout.widget.ConstraintLayout>